################
# INPUT SETUP #
################

molecule x {
0 1
XXX
}

set {
    basis def2-SVP
    fail_on_maxiter false
}


################
# OUTPUT SETUP #
################

optimize('scf')

coords = np.array(x.geometry())*bohr2angstroms

c = open('temp.xyz','w')
c.write(f'{x.natom()}\n')
c.write('Coordinates after optimisation step\n')
for i, j in enumerate(coords):
    c.write(f'{x.label(i)} {j[0]} {j[1]} {j[2]}\n')
